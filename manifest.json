{
    "manifest_version": 2,
    "name": "BlockingSubresource",
    "version": "1.0",

    "description": "Blocks the facebook.com when it is a subresource.",

    "icons": {
        "48": "blocked-48.png"
    },

    "applications": {
      "gecko": {
        "id": "@subresource-facebook"
      }
    },

    "background": {
      "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "<all_urls>",
        "webRequestBlocking",
        "webRequest"
    ]
}
